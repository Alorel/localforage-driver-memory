{
  "name": "localforage-driver-memory",
  "version": "1.0.1",
  "description": "in-memory localforage driver that resets on page reload",
  "main": "index.js",
  "types": "index.d.ts",
  "typings": "index.d.ts",
  "module": "esm5/index.js",
  "esm5": "esm5/index.js",
  "esm2015": "esm2015/index.js",
  "fesm5": "esm5/index.js",
  "fesm2015": "esm2015/index.js",
  "browser": "umd/localforage-driver-memory.umd.js",
  "jsdelivr": "umd/localforage-driver-memory.umd.min.js",
  "repository": "git@github.com:Alorel/localforage-driver-memory.git",
  "author": "Arturas Molcanovas <a.molcanovas@gmail.com> (https://github.com/Alorel)",
  "license": "MIT",
  "private": false,
  "scripts": {
    "refresh": "yarn --check-files",
    "prebuild": "rimraf dist",
    "build": "concurrently \"npm run build:umd\" \"npm run build:es5\" \"npm run build:esm5\" \"npm run build:esm2015\"",
    "build:esm5": "tsc -p ./tsconfig.esm5.json",
    "build:esm2015": "tsc -p ./tsconfig.esm2015.json",
    "build:umd": "webpack --progress",
    "build:es5": "tsc -p ./tsconfig.json --declaration",
    "watch:es5": "npm run build:es5 -- --watch",
    "lint": "tslint -s ./node_modules/custom-tslint-formatters/formatters -t grouped -p ./tsconfig.test.json",
    "lint:fix": "npm run lint -- --fix",
    "pretest": "rimraf coverage",
    "test": "nyc mocha --opts ./mocha.opts"
  },
  "peerDependencies": {
    "localforage": "^1.7.0"
  },
  "devDependencies": {
    "@alorel-personal/build-tools": "3.1.0",
    "@alorel-personal/conventional-changelog-alorel": "2.0.3",
    "@alorel-personal/semantic-release": "1.3.1",
    "@alorel-personal/tslint-rules": "2.0.0",
    "@semantic-release/changelog": "~3.0.0",
    "@semantic-release/exec": "~3.1.2",
    "@semantic-release/git": "~7.0.3",
    "@types/chai": "~4.1.4",
    "@types/mocha": "~5.2.5",
    "@types/uuid": "~3.4.4",
    "chai": "~4.1.2",
    "concurrently": "~4.0.1",
    "coveralls": "~3.0.2",
    "custom-tslint-formatters": "~2.4.0",
    "lf-1.6": "npm:localforage@~1.6.0",
    "localforage": "~1.7.2",
    "lodash": "~4.17.10",
    "mocha": "~5.2.0",
    "nyc": "~13.0.1",
    "rimraf": "~2.6.2",
    "semantic-release": "~15.9.14",
    "source-map-support": "~0.5.9",
    "ts-loader": "~5.1.0",
    "ts-node": "~7.0.1",
    "tslint": "~5.11.0",
    "typescript": "~3.0.3",
    "uuid": "~3.3.2",
    "webpack": "~4.18.0",
    "webpack-cli": "~3.1.0"
  },
  "dependencies": {
    "localforage-driver-commons": "^1.0.1"
  }
}
